<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rv_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    android:layout_width="match_parent"
    android:layout_height="166dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="8dp"
        android:background="@drawable/corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="1dp">

            <TextView
                android:id="@+id/rv_item_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleDegree"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/rv_item_degree_gap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_item_degree"/>

            <TextView
                android:id="@+id/rv_item_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/textStyleMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_item_degree_gap"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/rv_item_weather_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_sunny"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/rv_item_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textStyleRegular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</RelativeLayout>